{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "plugins": [
    "html",
    "import"
  ],
  "rules": {
    "no-param-reassign": 0,
    "consistent-return": 0,
    "func-names": 0,
    "no-console": 0,
    "no-shadow": 0,
    "radix": 0,
    "no-constant-condition": 0,
    "no-plusplus": 1,
    "no-restricted-syntax": 1,
    "no-underscore-dangle": 0,
    "no-continue": 1,
    "quotes": [
      1,
      "single"
    ]
  }
}
